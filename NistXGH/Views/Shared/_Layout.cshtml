<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NIST CSF</title>

    <!-- CSS Base Compartilhado -->
    <link rel="stylesheet" href="~/css/base/variables.css" />
    <link rel="stylesheet" href="~/css/base/reset.css" />
    <link rel="stylesheet" href="~/css/components/breadcrumb.css" />
    <link rel="stylesheet" href="~/css/components/forms.css" />
    <link rel="stylesheet" href="~/css/components/buttons.css" />

    <!-- Font Awesome para ícones -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- CSS específico da página -->
    @RenderSection("Styles", required: false)

    <!-- CSS Global -->
    <link rel="stylesheet" href="~/css/global.css" />

    <script src="~/js/core/nist-core.js" asp-append-version="true"></script>
</head>

<body>
    <!-- Header -->
    <header class="main-header">
        <nav class="main-nav">
            <div class="nav-brand">
                <h1><i class="fas fa-shield-alt"></i> NIST CSF</h1>
            </div>
            <div class="nav-links">
                <a href="/Home" class="nav-link"><i class="fas fa-home"></i> Home</a>
                <a href="/Home/CenarioAF" class="nav-link"><i class="fas fa-user-plus"></i> Cadastro</a>
                <a href="/Home/Consultas" class="nav-link"><i class="fas fa-search"></i> Consultas</a>
                <a href="/Home/Relatorios" class="nav-link"><i class="fas fa-chart-bar"></i> Relatórios</a>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="container">
            <p><i class="fas fa-copyright"></i> 2025 NIST CSF - Sistema de Gestão</p>
        </div>
    </footer>

    <!-- JavaScript específico da página -->
    @RenderSection("Scripts", required: false)
</body>

</html>