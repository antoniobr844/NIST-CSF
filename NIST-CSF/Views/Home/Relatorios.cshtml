@{
    ViewData["Title"] = "Relatório de Análise Descritiva - NIST CSF";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/relatorios.css" />
}

<div class="container">
    <h1>Relatórios - Cenário Futuro</h1>

    <!-- CONTROLES - Usando combo-container -->
    <div class="combo-container">
        <div class="controls">
            <div class="filter-group">
                <label for="filterFunction" class="form-label">Função:</label>
                <select id="filterFunction" class="form-control">
                    <option value="">Todas as funções</option>
                    <option value="GV">Governança (GV)</option>
                    <option value="ID">Identificar (ID)</option>
                    <option value="PR">Proteger (PR)</option>
                    <option value="DE">Detectar (DE)</option>
                    <option value="RS">Responder (RS)</option>
                    <option value="RC">Recuperar (RC)</option>
                </select>
            </div>

            <div class="filter-group">
                <label for="filterPriority" class="form-label">Prioridade:</label>
                <select id="filterPriority" class="form-control">
                    <option value="">Todas as prioridades</option>
                    <option value="1">Alta</option>
                    <option value="2">Média</option>
                    <option value="3">Baixa</option>
                </select>
            </div>

            <div class="filter-group">
                <label for="filterLevel" class="form-label">Nível:</label>
                <select id="filterLevel" class="form-control">
                    <option value="">Todos os níveis</option>
                    <option value="1">Nível 1</option>
                    <option value="2">Nível 2</option>
                    <option value="3">Nível 3</option>
                    <option value="4">Nível 4</option>
                    <option value="5">Nível 5</option>
                </select>
            </div>

            <button id="btnFiltrar" class="btn btn-primary">Aplicar Filtros</button>
            <button id="btnExportar" class="btn btn-success">Exportar Relatório</button>
        </div>
    </div>

    <!-- SUMMARY - Usando cards estilo home -->
    <div class="summary">
        <div class="summary-card">
            <h3>Total de Registros</h3>
            <div class="summary-value" id="totalRegistros">0</div>
        </div>
        <div class="summary-card">
            <h3>Subcategorias</h3>
            <div class="summary-value" id="totalSubcategorias">0</div>
        </div>
        <div class="summary-card">
            <h3>Nível Médio</h3>
            <div class="summary-value" id="nivelMedio">-</div>
        </div>
    </div>

    <!-- TABLE - Usando table-container existente -->
    <div class="combo-container">
        <div class="table-container">
            <table id="tabelaCenarios">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Subcategoria</th>
                        <th>Prioridade</th>
                        <th>Nível</th>
                        <th>Política</th>
                        <th>Prática</th>
                        <th>Artefato</th>
                        <th>Função</th>
                        <th>Referência</th>
                        <th>Data Registro</th>
                    </tr>
                </thead>
                <tbody id="tbodyCenarios">
                    <tr>
                        <td colspan="10" class="loading">Carregando dados...Aqui é os dados</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- RECOMMENDATIONS - Usando combo-container -->
    <div class="combo-container">
        <div class="recommendations">
            <h2>Recomendações</h2>
            <div id="listaRecomendacoes">
                <div class="recommendation-item">Analise os dados carregados para ver recomendações específicas.</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/modules/relatoriosManager.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            relatoriosManager.init();
        });
    </script>
}