@{
    ViewData["Title"] = "Home - Sistema";
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/home.css">
    <!-- Font Awesome para ícones -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
           font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            padding: 20px;
            color: #2c3e50;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            
        }

        .header {
            text-align: center;
            margin-bottom: 50px;
            color: white;
        }

        .title {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.2em;
            font-weight: 600;
            color: #2c3e50;
        }        

        .subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        /* Container dos cards */
        .cards-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-bottom: 50px;
            
        }

        /* Cards principais */
        .card {
            background: white;
            border-radius: 0px;
            padding: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            gap: 20px;
            position: relative;
            overflow: hidden;
            
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 5px;
            height: 100%;
            background: linear-gradient(135deg, #d80300 100%);
            
        }

        .card-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #d80300 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
            border-radius: 100px;
        }

        .card-content {
            flex: 1;
        }

        .card-content h3 {
            font-size: 1.5rem;
            margin-bottom: 8px;
            color: #333;
        }

        .card-content p {
            color: #666;
            line-height: 1.5;
        }

        .card-arrow {
            color: #666;
            font-size: 18px;
            opacity: 0.7;
            transition: opacity 0.3s ease;
        }

        .card:hover .card-arrow {
            opacity: 1;
        }

        /* Versão alternativa com links */
        .alternative-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 30px;
        }

        .alt-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 0px;
            padding: 20px;
            color: white;
            text-decoration: none;
            text-align: center;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
        }

        .alt-card:hover {
            background: rgba(#d3d3d3, #bdbdbd, 255, 0.2);
            transform: translateY(-2px);
            text-decoration: none;
            color: white;
        }

        .alt-card i {
            font-size: 2rem;
            margin-bottom: 5px;
        }

        .alt-card span {
            font-size: 1.1rem;
            font-weight: 500;
        }

        /* Container do botão */
        .button-container {
            text-align: center;
            margin: 40px 0;
        }

        /* Responsividade */
        media (max-width: 768px) {
            .cards-container {
                grid-template-columns: 1fr;
            }

            .card {
                flex-direction: column;
                text-align: center;
                padding: 20px;
            }

            .title {
                font-size: 2rem;
            }

            .alternative-cards {
                grid-template-columns: 1fr;
            }

            .btn-pre-cadastro {
                padding: 12px 25px;
                font-size: 1em;
            }
        }

        /* Animações */
        keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card {
            animation: fadeInUp 0.6s ease forwards;
        }

        .card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .card:nth-child(3) {
            animation-delay: 0.3s;
        }
    </style>
</head>

<body>
    <div class="container">
        <header class="header">
            <h1 class="title">NIST CSF - Consultas</h1>
            <p class="subtitle">Selecione uma opção para continuar</p>
        </header>

        <div class="cards-container">
            <!-- Card 1 - Cadastro -->
            <div class="card" onclick="navigateTo('/Home/Precadastro')">
                <div class="card-icon">
                    <i class="fas fa-user-plus"></i>
                </div>
                <div class="card-content">
                    <h3>Cadastro</h3>
                    <p>Realize o cadastro de informações no sistema.</p>
                </div>
                <div class="card-arrow">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </div>

            <!-- Card 2 - Consultas -->
            <div class="card" onclick="navigateTo('/Home/Consultas')">
                <div class="card-icon">
                    <i class="fas fa-search"></i>
                </div>
                <div class="card-content">
                    <h3>Consultas</h3>
                    <p>Consulte categorias e subcategorias do NIST Cybersecurity Framework.</p>
                </div>
                <div class="card-arrow">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </div>

            <!-- Card 3 - Relatórios -->
            <div class="card" onclick="navigateTo('/Home/Relatorios')">
                <div class="card-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <div class="card-content">
                    <h3>Relatórios</h3>
                    <p>Acomnpanhamento de evolução do cenário atual em relação as projeções futuras.</p>
                </div>
                <div class="card-arrow">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </div>
        </div>

        <!-- Versão alternativa com links tradicionais
        <div class="alternative-cards">
            <a href="/Home/Precadastro" class="alt-card">
                <i class="fas fa-user-plus"></i>
                <span>Cadastro</span>
            </a>

            <a href="/Home/Consultas" class="alt-card">
                <i class="fas fa-search"></i>
                <span>Consultas</span>
            </a>

            <a href="/Home/relatorios" class="alt-card">
                <i class="fas fa-chart-bar"></i>
                <span>Relatórios</span>
            </a>
        </div>-->
    </div>

    <script>
        function navigateTo(url) {
            window.location.href = url;
        }

        // Adiciona efeitos de hover via JavaScript
        document.querySelectorAll('.card').forEach(card => {
            card.addEventListener('mouseenter', function () {
                this.style.transform = 'translateY(-5px)';
            });

            card.addEventListener('mouseleave', function () {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
</body>

</html>