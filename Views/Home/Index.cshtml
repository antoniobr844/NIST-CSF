@{
    ViewData["Title"] = "Home - Sistema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/home.css" />
}

<div class="container">
    <header class="header">
        <h1 class="title">NIST CSF - Consultas</h1>
        <p class="subtitle">Selecione uma opção para continuar</p>
    </header>

    <div class="cards-container">
        <!-- Card 1 - Cadastro -->
        <div class="card" onclick="navigateTo('/Home/Precadastro')">
            <div class="card-icon">
                <i class="fas fa-user-plus"></i>
            </div>
            <div class="card-content">
                <h3>Cadastro</h3>
                <p>Realize o cadastro de informações no sistema.</p>
            </div>
            <div class="card-arrow">
                <i class="fas fa-chevron-right"></i>
            </div>
        </div>

        <!-- Card 2 - Consultas -->
        <div class="card" onclick="navigateTo('/Home/Consultas')">
            <div class="card-icon">
                <i class="fas fa-search"></i>
            </div>
            <div class="card-content">
                <h3>Consultas</h3>
                <p>Consulte categorias e subcategorias do NIST Cybersecurity Framework.</p>
            </div>
            <div class="card-arrow">
                <i class="fas fa-chevron-right"></i>
            </div>
        </div>

        <!-- Card 3 - Relatórios -->
        <div class="card" onclick="navigateTo('/Home/Relatorios')">
            <div class="card-icon">
                <i class="fas fa-chart-bar"></i>
            </div>
            <div class="card-content">
                <h3>Relatórios</h3>
                <p>Acompanhamento de evolução do cenário atual em relação as projeções futuras.</p>
            </div>
            <div class="card-arrow">
                <i class="fas fa-chevron-right"></i>
            </div>
        </div>
@section Scripts {
    <script>
        function navigateTo(url) {
            window.location.href = url;
        }

        // Adiciona efeitos de hover via JavaScript
        document.querySelectorAll('.card').forEach(card => {
            card.addEventListener('mouseenter', function () {
                this.style.transform = 'translateY(-5px)';
            });

            card.addEventListener('mouseleave', function () {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
}