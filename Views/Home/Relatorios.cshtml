    }

    .level-4 {
        background-color: #2ecc71;
    }

    .level-5 {
        background-color: #3498db;
    }

    .no-data {
        text-align: center;
        padding: 40px;
        color: #7f8c8d;
        font-style: italic;
        background: #f8f9fa;
        border-radius: 8px;
        border: 2px dashed #bdc3c7;
    }

    .error {
        background: linear-gradient(135deg, #ffe6e6, #ffcccc);
        color: #e74c3c;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        margin: 20px 0;
        border-left: 6px solid #e74c3c;
        font-weight: 500;
    }
</style>

<div class="container">
